{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/desktop",
    "types": [
      "node"
    ],
    "paths": {
      "@src/*": [
        "src/*.desktop",
        "src/*"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts",
    "src/app/content/content.module.ts",
    "src/app/settings/settings.module.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
